<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Backpack - Welcome</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- BOOSTRAP CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">

    <!-- CSS -->
    <link rel="stylesheet" type="text/css" href="/assets/style.css">

    <!-- GOOGLE FONTS -->
    <link href="https://fonts.googleapis.com/css?family=Fredericka+the+Great|Ruda|Skranji" rel="stylesheet">

    <!-- BOOTSTRAP SCRIPT -->
    <script src="https://code.jquery.com/jquery-3.3.1.js" integrity="sha256-2Kok7MbOyxpgUVvAk/HJ2jigOSYS2auK4Pfzbm7uH60=" crossorigin="anonymous" defer></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous" defer></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.bundle.min.js" integrity="sha384-pjaaA8dDz/5BgdFUPX6M/9SUZv4d12SUPF0axWc+VRZkx5xU3daN+lYb49+Ax+Tl" crossorigin="anonymous" defer></script>
  </head>
  <body class="lake-background-image">


    <!-- NAVIGATION -->
    <nav class="navbar navbar-dark bg-dark fixed-top navbar">
      <h1 class="text-white fredericka-font"><a class="remove-blue" href="/">BACKPACK</a></h1>
      <form class="form-inline">
        <a class="btn btn-outline-success float-right ruda-font" href="/">Back</a>&nbsp
        <a class="btn btn-outline-danger ruda-font float-right" href="/logout">Logout</a>&nbsp  
      </form>
    </nav>

    <div class="container">

      <div class="row">
        <div class="col-md-12">
            <h1 class="ruda-font text-center bold">Welcome <%=packer.packerName%></h1>
            <hr class="style-seven">
        </div>
      </div>

      <div class="row">
        <div class="col-md-12">
            <h2 class="ruda-font bold">Upcoming Trips</h2>
            <a class="btn btn-lg btn-warning ruda-font" href="/newTrip">Create New Trip</a>
        </div>
      </div>


      
      <div class="row">
        <% for(var i=0; i <trip.length; i++){ %>
          <div class="col-md-12 card mycard">
 
              <h3 class="ruda-font"><b><%= trip[i].tripName %></b></h3>
              <h5 class="ruda-font"><b><%= trip[i].location %></b></h5>
              <h5 class="ruda-font font-italic"><%= trip[i].startDate.toDateString() %> &nbsp--to--&nbsp <%= trip[i].endDate.toDateString() %></h5>
              <p class="ruda-font"><%= trip[i].description %></p>

              <% if(trip[i].role === "admin"){ %>
                <a href="/trip/details/<%=trip[i].id%>" class="btn btn-success trip-button no-opacity ruda-font"  value="view/edit">View / Edit</a>
              <%} else {%>
                <a href="/trip/details/<%=trip[i].id%>" class="btn btn-success trip-button no-opacity ruda-font"  value="view">View</a>
              <% } %> 

          </div>
        <% } %>          
      </div>      

    </div>
  </body>
  
</html>
